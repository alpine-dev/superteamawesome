{
  "name": "superteamawesome-server",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build:copy": "npm-run-all build:copy:folder build:copy:images build:copy:fonts",
    "build:copy:folder": "mkdir -p server/public",
    "build:copy:images": "cp -r app/src/images server/public",
    "build:copy:fonts": "cp -r app/src/fonts server/public",
    "build:compile": "npm-run-all -p build:less build:typescript",
    "build:typescript": "npm-run-all -p build:typescript:app build:typescript:server",
    "build:typescript:app": "tsc -p app/",
    "build:typescript:server": "tsc -p server/",
    "build:less": "lessc --npm-import=\"prefix=~\" app/src/app.less app/build/src/app.css --source-map",
    "start": "nodemon ./server/app.js",
    "start:prod": "npm-run-all dist start",
    "dev": "npm-run-all build:copy build:compile dev:run",
    "dev:run": "npm-run-all -p watch start",
    "clean:public": "rm -rf server/public/*",
    "dist": "npm-run-all clean:public build:copy build:compile dist:bundle:webpack",
    "dist:bundle:webpack": "webpack --config config/webpack.config.prod.js",
    "setup": "npm-run-all setup:install build:compile",
    "setup:install": "npm install -g webpack typescript tslint nodemon",
    "watch": "npm-run-all -p watch:app watch:server",
    "watch:app": "npm-run-all -p watch:typescript:app watch:less watch:bundle:app",
    "watch:less": "chokidar 'app/src/**/*.less' -c 'npm run build:less'",
    "watch:bundle:app": "webpack --watch --profile --colors --progress --config config/webpack.config.js",
    "watch:server": "npm-run-all -p watch:typescript:server",
    "watch:typescript:app": "tsc -w -p app/",
    "watch:typescript:server": "tsc -w -p server/"
  },
  "dependencies": {
    "@types/body-parser": "0.0.33",
    "@types/classnames": "0.0.32",
    "@types/cookie-parser": "^1.3.30",
    "@types/express": "^4.0.34",
    "@types/node": "^6.0.58",
    "@types/react": "0.0.0",
    "@types/react-addons-css-transition-group": "^0.14.19",
    "@types/react-addons-shallow-compare": "^0.14.18",
    "@types/react-addons-transition-group": "^0.14.18",
    "@types/react-dom": "^0.14.20",
    "@types/react-redux": "^4.4.35",
    "@types/react-router": "^2.0.41",
    "@types/redux-logger": "^2.6.32",
    "@types/redux-thunk": "^2.1.32",
    "@types/whatwg-fetch": "0.0.33",
    "body-parser": "~1.15.2",
    "classnames": "2.2.5",
    "cookie-parser": "~1.4.3",
    "debug": "~2.2.0",
    "es6-shim": "^0.35.2",
    "express": "^4.14.0",
    "firebase": "^3.6.4",
    "google-client-api": "^1.0.4",
    "hbs": "~4.0.1",
    "moment": "^2.17.1",
    "morgan": "~1.7.0",
    "node": "0.0.0",
    "normalize.css": "^5.0.0",
    "react": "^15.4.1",
    "react-addons-update": "^15.4.1",
    "react-dom": "^15.4.1",
    "react-google-login": "^2.5.9",
    "react-redux": "^5.0.1",
    "react-router": "^3.0.0",
    "redux": "^3.6.0",
    "redux-logger": "^2.7.4",
    "redux-thunk": "^2.1.0",
    "serve-favicon": "~2.3.0"
  },
  "devDependencies": {
    "autoprefixer": "^6.5.4",
    "chokidar-cli": "^1.2.0",
    "copy-webpack-plugin": "^4.0.1",
    "css-loader": "^0.26.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "less": "^2.7.1",
    "less-plugin-npm-import": "^2.1.0",
    "npm-run-all": "^3.1.2",
    "postcss": "^5.2.6",
    "postcss-less": "^0.15.0",
    "postcss-loader": "^1.2.1",
    "source-map-loader": "^0.1.5",
    "style-loader": "^0.13.1",
    "tslint": "^4.0.2",
    "tslint-react": "^2.0.0",
    "typescript": "^2.1.4",
    "webpack": "^1.14.0"
  }
}
